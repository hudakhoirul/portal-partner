{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "paths": {
            "@fuse": [
                "@fuse/"
            ],
            "@app/*": [
                "app/*"
            ],
            "@env/*": [
                "environments/*"
            ],
            "jszip": [
                "../node_modules/jszip/dist/jszip.min.js"
            ]
        },
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "allowJs": true
}
